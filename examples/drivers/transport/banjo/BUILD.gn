import("//build/fidl/fidl.gni")

group("banjo") {
  deps = [
    "v1:child_component",
    "v1:parent_component",
    "v2:child_component",
    "v2:parent_component",
  ]
}

# Sample driver protocol using the Banjo transport
fidl("fuchsia.examples.gizmo") {
  sources = [ "gizmo.test.fidl" ]
  public_deps = [ "//zircon/vdso/zx" ]
  enable_banjo = true
}
