import("//build/fidl/fidl.gni")

fidl("fuchsia.images2") {
  # Promoting this library will require extra care since part of it is marked
  # available at an older API level (see https://fxbug.dev/42085119), and this would
  # carry over to the new category.
  sdk_category = "internal"
  api = "fuchsia.images2.api"

  sources = [
    "format_modifier.fidl",
    "image_format.fidl",

    # TODO(b/329151498): Remove when build-time support for level 17 and lower
    # is removed.
    "math.fidl",
  ]

  public_deps = [ "//sdk/fidl/fuchsia.math" ]

  enable_cpp = true
  enable_hlcpp = true
  enable_rust = true
}
