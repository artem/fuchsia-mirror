library fuchsia.hardware.adcimpl;

const ADC_NAME_MAX_LENGTH uint32 = 64;

type AdcChannel = table {
    /// Index of channel.
    1: idx uint32;

    /// Channel name.
    2: name string:ADC_NAME_MAX_LENGTH;
};

type Metadata = table {
    /// ADC Channels to expose.
    1: channels vector<AdcChannel>:MAX;
};
