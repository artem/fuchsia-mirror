{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/sys_inspect_cpp_bin",
    },
    expose: [
        {
            directory: "diagnostics",
            from: "self",

            // TODO(https://fxbug.dev/42058073): Renaming the capability because `cmc` detects
            // a conflict with the `expose` declartion to framework.
            as: "parent-diagnostics",
            to: "parent",
        },
    ],
}
