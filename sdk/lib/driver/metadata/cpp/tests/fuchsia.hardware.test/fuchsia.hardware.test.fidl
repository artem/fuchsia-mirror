library fuchsia.hardware.test;

using zx;

const SERVICE string = "fuchsia.hardware.test.Metadata";

type Metadata = table {
    1: test_property string:MAX;
};

closed protocol Parent {
    strict SetMetadata(struct {
        metadata Metadata;
    }) -> () error zx.Status;
};

closed protocol Child {
    strict GetMetadata() -> (struct {
        metadata Metadata;
    }) error zx.Status;

    strict ForwardMetadata() -> () error zx.Status;
};

closed protocol Grandchild {
    strict GetMetadata() -> (struct {
        metadata Metadata;
    }) error zx.Status;
};
