import("//build/bind/bind.gni")
import("//build/components.gni")
import("//build/drivers.gni")

driver_bind_rules("bind") {
  testonly = true
  disable_autobind = true
  bind_output = "test_root.bindbc"
}

fuchsia_driver("driver") {
  testonly = true
  output_name = "test_root_driver"
  sources = [
    "test_root.cc",
    "test_root.h",
  ]
  deps = [
    "//sdk/lib/driver/metadata/cpp/tests:fuchsia_driver_metadata_test_bind_library_cpp",
    "//src/devices/lib/driver:driver_runtime",
  ]
  public_deps = [
    "//sdk/fidl/fuchsia.driver.framework:fuchsia.driver.framework_cpp",
    "//sdk/lib/driver/component/cpp",
  ]
}

fuchsia_driver_component("component") {
  testonly = true
  component_name = "test_root"
  manifest = "meta/test_root.cml"
  deps = [
    ":bind",
    ":driver",
  ]
  info = "test_root_info.json"
}
