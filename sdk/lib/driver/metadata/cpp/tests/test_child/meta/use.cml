{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "driver",
        binary: "driver/test_child_driver.so",
        bind: "meta/bind/test_child_use.bindbc",
        default_dispatcher_opts: [ "allow_sync_calls" ],
    },
    capabilities: [
        { service: "fuchsia.hardware.test.Metadata" },
    ],
    use: [
        { service: "fuchsia.hardware.test.Metadata" },
    ],
    expose: [
        {
            service: "fuchsia.hardware.test.Metadata",
            from: "self",
        },
    ],
}
