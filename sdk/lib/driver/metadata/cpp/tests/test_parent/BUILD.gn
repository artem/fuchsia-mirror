import("//build/bind/bind.gni")
import("//build/components.gni")
import("//build/drivers.gni")

driver_bind_rules("expose_bind") {
  testonly = true
  rules = "expose.bind"
  bind_output = "test_parent_expose.bindbc"
  deps = [ "//sdk/lib/driver/metadata/cpp/tests:fuchsia_driver_metadata_test_bind_library" ]
}

driver_bind_rules("no_expose_bind") {
  testonly = true
  rules = "no_expose.bind"
  bind_output = "test_parent_no_expose.bindbc"
  deps = [ "//sdk/lib/driver/metadata/cpp/tests:fuchsia_driver_metadata_test_bind_library" ]
}

fuchsia_driver("driver") {
  testonly = true
  output_name = "test_parent_driver"
  sources = [
    "test_parent.cc",
    "test_parent.h",
  ]
  deps = [
    "//sdk/lib/driver/metadata/cpp/tests:fuchsia_driver_metadata_test_bind_library_cpp",
    "//src/devices/lib/driver:driver_runtime",
  ]
  public_deps = [
    "//sdk/fidl/fuchsia.driver.framework:fuchsia.driver.framework_cpp",
    "//sdk/lib/driver/component/cpp",
    "//sdk/lib/driver/devfs/cpp",
    "//sdk/lib/driver/metadata/cpp",
    "//sdk/lib/driver/metadata/cpp/tests/fuchsia.hardware.test:metadata",
  ]
}

fuchsia_driver_component("expose_component") {
  testonly = true
  component_name = "test_parent_expose"
  manifest = "meta/expose.cml"
  deps = [
    ":driver",
    ":expose_bind",
  ]
  info = "expose_info.json"
}

fuchsia_driver_component("no_expose_component") {
  testonly = true
  component_name = "test_parent_no_expose"
  manifest = "meta/no_expose.cml"
  deps = [
    ":driver",
    ":no_expose_bind",
  ]
  info = "no_expose_info.json"
}
