import("//build/sdk/sdk_molecule.gni")

group("tests") {
  deps = [
    "clock-controllers:tests",
    "gpio-controllers:tests",
    "i2c-controllers:tests",
    "interrupt-controllers:tests",
    "mali-gpu:tests",
    "registers:tests",
    "usb:tests",
  ]
  testonly = true
}

sdk_molecule("devicetree-visitors") {
  visibility = [
    ":*",
    "//sdk:*",
  ]

  deps = [
    "//sdk/lib/driver/devicetree/visitors/drivers/clock-controllers/clockimpl-visitor:clockimpl-visitor_sdk",
    "//sdk/lib/driver/devicetree/visitors/drivers/gpio-controllers/gpioimpl-visitor:gpioimpl-visitor_sdk",
    "//sdk/lib/driver/devicetree/visitors/drivers/i2c-controllers/i2c-bus-visitor:i2c-bus-visitor_sdk",
    "//sdk/lib/driver/devicetree/visitors/drivers/interrupt-controllers/arm-gicv2:arm-gicv2_sdk",
    "//sdk/lib/driver/devicetree/visitors/drivers/mali-gpu:mali-gpu-visitor_sdk",
    "//sdk/lib/driver/devicetree/visitors/drivers/registers:registers-visitor_sdk",
    "//sdk/lib/driver/devicetree/visitors/drivers/sysmem:sysmem-visitor_sdk",
    "//sdk/lib/driver/devicetree/visitors/drivers/usb/aml-usb-phy:aml-usb-phy-visitor_sdk",
    "//sdk/lib/driver/devicetree/visitors/drivers/usb/dwc2:dwc2-visitor_sdk",
    "//sdk/lib/driver/devicetree/visitors/drivers/usb/usb-phy:usb-phy-visitor_sdk",
  ]
}
