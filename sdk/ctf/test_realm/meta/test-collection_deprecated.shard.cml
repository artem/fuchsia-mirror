{
    collections: [
        {
            name: "cts-tests",
            environment: "#test-env",
            durability: "transient",
        },
    ],
    offer: [
        {
            event_stream: [
                "capability_requested",
                "directory_ready",
            ],
            from: "parent",
            to: "#cts-tests",
            scope: "#cts-tests",
        },
        {
            // These hermetic protocols are offered to be used by tests.
            protocol: [ "fuchsia.logger.LogSink" ],
            from: "parent",
            to: [ "#cts-tests" ],
        },

        // These system capabilities are offered for use by the cts tests.
        {
            protocol: [
                // Used for hwinfo FCT tests.
                "fuchsia.hwinfo.Board",
                "fuchsia.hwinfo.Device",
                "fuchsia.hwinfo.Product",

                // Used for intl settings FCT tests.
                "fuchsia.intl.PropertyProvider",

                // Used for Vulkan CTF tests.
                "fuchsia.media.ProfileProvider",

                // Used by DriverTestRealm and fdio tests.
                "fuchsia.process.Launcher",

                // Used by the fdio tests
                "fuchsia.process.Resolver",

                // Used for Flatland CTF tests.
                "fuchsia.scheduler.ProfileProvider",

                // Used for intl settings FCT tests.
                "fuchsia.settings.Intl",

                // Used for privacy settings FCT tests.
                "fuchsia.settings.Privacy",

                // Used for Vulkan CTF tests.
                "fuchsia.sysmem.Allocator",
                "fuchsia.tracing.provider.Registry",
                "fuchsia.vulkan.loader.Loader",
            ],
            from: "parent",
            to: "#cts-tests",
        },
        {
            storage: "fxfs_tests_data",
            from: "self",
            as: "data",
            to: [ "#cts-tests" ],
            rights: [ "rw*" ],
        },
        {
            storage: "tmp",
            from: "self",
            to: [ "#cts-tests" ],
        },
        {
            storage: "cache",
            from: "self",
            to: [ "#cts-tests" ],
        },
        {
            protocol: "fuchsia.inspect.InspectSink",
            from: "parent",
            to: [ "#cts-tests" ],
        },
    ],
}
