import("//sdk/ctf/build/ctf.gni")

ctf_rustc_test("fuchsia-intl-test-bin") {
  edition = "2018"
  name = "fuchsia_intl_test"
  source_root = "src/fuchsia_intl_test.rs"
  sources = [ "src/fuchsia_intl_test.rs" ]
  deps = [
    "//sdk/fidl/fuchsia.intl:fuchsia.intl_rust",
    "//sdk/fidl/fuchsia.settings:fuchsia.settings_rust",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-component",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:futures",
  ]
}

ctf_fuchsia_component("fuchsia-intl-test-component") {
  testonly = true
  component_name = "fuchsia-intl-test"
  manifest = "meta/fuchsia-intl-test.cml"
  deps = [ ":fuchsia-intl-test-bin" ]
}

ctf_fuchsia_package("fuchsia-intl-tests") {
  package_name = "fuchsia-intl-tests"
  testonly = true
  deps = [ ":fuchsia-intl-test-component" ]
}

fuchsia_test_component("test-root") {
  testonly = true
  manifest = "meta/fuchsia-intl-test-root.cml"
  test_type = "ctf"
}

fuchsia_test_package("fuchsia-intl-tests-package") {
  test_components = [ ":test-root" ]
  subpackages = [ ":fuchsia-intl-tests" ]
}

group("tests") {
  testonly = true
  deps = [
    ":fuchsia-intl-tests-package",
    ":fuchsia-intl-tests_archive",
  ]
}
