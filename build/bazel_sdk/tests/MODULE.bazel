module(
    name = "sdk-integration",
    version = "1.0",
)

bazel_dep(name = "platforms", version = "0.0.8")
bazel_dep(name = "bazel_skylib", version = "1.5.0")
bazel_dep(name = "rules_python", version = "0.22.1")
bazel_dep(name = "rules_license", version = "0.0.8")
bazel_dep(name = "googletest", version = "1.12.1", repo_name = "com_google_googletest")
bazel_dep(name = "fuchsia_workspace", version = "")
local_path_override(
    module_name = "fuchsia_workspace",
    path = "../bazel_rules_fuchsia",
)

bazel_dep(name = "fuchsia_sdk_common", version = "")
local_path_override(
    module_name = "fuchsia_sdk_common",
    path = "../bazel_rules_fuchsia/common",
)

fuchsia_build_config_ext = use_extension("@fuchsia_sdk_common//:fuchsia_platform_build.bzl", "fuchsia_build_config_ext")
use_repo(fuchsia_build_config_ext, "fuchsia_build_config")

fuchsia_sdk_ext = use_extension("@fuchsia_workspace//fuchsia:deps.bzl", "fuchsia_sdk_ext")
use_repo(fuchsia_sdk_ext, "fuchsia_sdk")

fuchsia_clang_ext = use_extension("@fuchsia_workspace//fuchsia/workspace:fuchsia_clang_repository.bzl", "fuchsia_clang_ext")
use_repo(fuchsia_clang_ext, "fuchsia_clang")

register_toolchains(
    "@fuchsia_sdk//:fuchsia_toolchain_sdk",
)
