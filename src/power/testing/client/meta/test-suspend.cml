{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/test-suspend-bin",
    },
    capabilities: [
        {
            directory: "dev-class-suspend",
            rights: [ "r*" ],
            path: "/suspend",
        },
        {
            directory: "dev-class-test",
            rights: [ "r*" ],
            path: "/controller",
        },
    ],
    expose: [
        {
            directory: "dev-class-suspend",
            from: "self",
        },
        {
            directory: "dev-class-test",
            from: "self",
        },
    ],
}
