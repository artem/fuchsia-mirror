load(
    "@fuchsia_sdk//fuchsia:assembly.bzl",
    "BUILD_TYPES",
    "PACKAGE_MODE",
    "fuchsia_legacy_bundle",
    "fuchsia_product",
    "fuchsia_product_bundle",
    "fuchsia_product_configuration",
)

package(default_visibility = ["//visibility:public"])

fuchsia_product_configuration(
    name = "product_config",
    product_config_json = {
        "platform": {
            "build_type": BUILD_TYPES.ENG,
            "feature_set_level": "bootstrap",
            "storage": {
                "filesystems": {
                    "image_mode": "no_image",
                },
            },
            "power": {
                "suspend_enabled": True,
                "testing_sag_enabled": True,
            },
        },
    },
)

fuchsia_legacy_bundle(
    name = "test_bundle",
    files = "@gn_targets//src/power/testing/system-integration/storage/custom-product:test_wrapped",
)

fuchsia_product(
    name = "image.power_testing_storage_vim3",
    board_config = "//src/power/testing/system-integration/storage/custom-board:power_testing_storage_vim3",
    legacy_bundle = ":test_bundle",
    package_mode = PACKAGE_MODE.BOOTFS,
    platform_artifacts = "//build/bazel/assembly/assembly_input_bundles:platform_bringup",
    product_config = ":product_config",
)

fuchsia_product_bundle(
    name = "product_bundle.power_testing_storage_vim3",
    board_name = "power_testing_storage_vim3",
    main = ":image.power_testing_storage_vim3",
    partitions_config = "//build/bazel/assembly/partitions_configurations:vim3",
    product_bundle_name = "power_testing",
    repository_keys = "//src/sys/pkg/repositories/devhost/keys",
    update_epoch = "1",
)
