import("//build/assembly/legacy_assembly_input_bundle.gni")
import("//build/bazel/assembly/bazel_product_bundle.gni")

assert(
    is_fuchsia,
    "Product definitions and assemblies should only be defined in the fuchsia toolchain")

assert(
    current_cpu == "arm64",
    "The power testing custom product can only be defined in an arm64 toolchain.")

legacy_assembly_input_bundle("test") {
  testonly = true
  bootfs_labels = [
    "//src/power/testing/system-integration/storage/test",
    "//src/testing/runtests",
  ]
  supports_blobs = false
  base_packages = []
  cache_packages = []
  additional_boot_args = []
}

bazel_input_resource_directory("test_wrapped") {
  testonly = true
  source_dir = "${target_out_dir}/legacy"
  dest_dir = rebase_path("${target_out_dir}/test_wrapped", root_build_dir)
  deps = [ ":test" ]
}

bazel_product_bundle("product_bundle") {
  testonly = true
  allow_eng_platform_bundle_use = true
  use_bazel_images_only = true
  fxfs_blob = false
  fvm = false
  has_recovery = false
  pb_name_override = "power_testing_storage.power_testing_storage_vim3"
  bazel_product_bundle_target = ":product_bundle.power_testing_storage_vim3"
  bazel_product_image_target = ":image.power_testing_storage_vim3"
  bazel_inputs_from_gn = [
    ":test_wrapped",
    "//src/power/testing/system-integration/storage/custom-board:power_testing_storage_vim3.bazel_input",
  ]
}
