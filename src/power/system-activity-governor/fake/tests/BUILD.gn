import("//build/components.gni")
import("//build/fidl/fidl.gni")
import("//build/rust/rustc_binary.gni")

rustc_test("bin") {
  name = "fake_system_activity_governor_test"
  testonly = true
  edition = "2021"
  deps = [
    "//sdk/fidl/fuchsia.power.broker:fuchsia.power.broker_rust",
    "//sdk/fidl/fuchsia.power.suspend:fuchsia.power.suspend_rust",
    "//sdk/fidl/fuchsia.power.system:fuchsia.power.system_rust",
    "//sdk/lib/driver_test_realm/realm_builder/rust",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-async",
    "//src/lib/fuchsia-component-test",
    "//src/power/broker:component",
    "//src/power/broker/client",
    "//src/power/system-activity-governor/fake:component",
    "//src/power/system-activity-governor/fake/fidl:test.sagcontrol_rust",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:tracing",
  ]

  sources = [ "src/lib.rs" ]
}

fuchsia_unittest_package("fake-ystem-activity-governor-test") {
  manifest = "meta/test.cml"
  deps = [ ":bin" ]
  test_specs = {
    environments = basic_envs
  }
}

group("tests") {
  testonly = true
  deps = [ ":fake-ystem-activity-governor-test" ]
}
