{
    include: [ "syslog/client.shard.cml" ],
    children: [
        {
            name: "kernel",
            url: "starnix_kernel#meta/starnix_kernel.cm",
        },
        {
            name: "debian_container",
            url: "#meta/container.cm",
            startup: "eager",
            environment: "#starnix_kernel_env",
        },
        {
            name: "puppet",
            url: "#meta/puppet.cm",
            environment: "#debian_container_env",
        },
    ],
    capabilities: [
        {
            protocol: "PuppetBinder",
            from: "#puppet",
        },
    ],
    offer: [
        {
            protocol: [ "fuchsia.kernel.VmexResource" ],
            from: "parent",
            to: "#kernel",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.component.Binder",
            from: "#puppet",

            // NB: RealmBuilder includes its own capability for this, need a different name.
            as: "PuppetBinder",
        },
    ],
    environments: [
        {
            name: "starnix_kernel_env",
            extends: "realm",
            runners: [
                {
                    runner: "starnix",
                    from: "#kernel",
                },
            ],
        },
        {
            name: "debian_container_env",
            extends: "realm",
            runners: [
                {
                    runner: "starnix_container",
                    from: "#debian_container",
                },
            ],
        },
    ],
}
