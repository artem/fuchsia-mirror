group("tests") {
  testonly = true
  deps = [
    "cpp:tests",
    "rust:tests",
  ]

  # TODO(https://fxbug.dev/135473): Enable once we have Linux on RISC-V support in Rust prebuilds.
  if (target_cpu == "riscv64") {
    deps -= [ "rust:tests" ]
  }
}
