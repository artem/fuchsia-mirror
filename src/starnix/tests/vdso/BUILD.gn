import("//build/components.gni")
import("//build/testing/environments.gni")

group("tests") {
  testonly = true
  deps = [ ":starnix-vdso-time-tests" ]
}

executable("vdso-calculate-utc-test-bin") {
  testonly = true
  output_name = "vdso-calculate-utc-test"
  sources = [ "vdso-calculate-utc-test.cc" ]
  deps = [
    "//src/lib/fxl/test:gtest_main",
    "//src/starnix/kernel:vdso-calculate-utc",
    "//third_party/googletest:gmock",
    "//third_party/googletest:gtest",
  ]
}

fuchsia_unittest_package("starnix-vdso-time-tests") {
  deps = [ ":vdso-calculate-utc-test-bin" ]
}
