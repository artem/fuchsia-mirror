group("tests") {
  testonly = true

  deps = [
    "extended_pstate:tests",
    "lock-sequence:tests",
    "range_map:tests",
    "selinux:tests",
    "starnix-lock:tests",
    "starnix-sync:tests",
    "syncio:tests",
    "ubpf:tests",
    "usercopy:tests",

    # TODO(fxbug.dev/132040): Disabled due to flakiness.
    # "kill_job_on_panic:tests",
  ]
}

