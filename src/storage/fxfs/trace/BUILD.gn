import("//build/components.gni")
import("//build/rust/rustc_library.gni")
import("//build/rust/rustc_test.gni")

rustc_library("trace") {
  name = "fxfs_trace"
  edition = "2021"
  sources = [ "src/lib.rs" ]
  deps = [ "//src/storage/fxfs/trace/macros:fxfs_trace_macros" ]
  visibility = [ "//src/storage/fxfs/*" ]

  if (is_fuchsia) {
    deps += [ "//src/lib/trace/rust:trace" ]
    features = [ "tracing" ]
    sources += [ "src/fuchsia.rs" ]
  } else {
    sources += [ "src/portable.rs" ]
  }
}

rustc_test("fxfs-trace-tests") {
  edition = "2021"
  sources = [ "tests/compile_tests.rs" ]
  source_root = "tests/compile_tests.rs"
  deps = [
    ":trace",
    "//src/lib/fuchsia",
  ]
}

fuchsia_unittest_package("fxfs-trace-tests-package") {
  package_name = "fxfs-trace-tests"
  deps = [ ":fxfs-trace-tests" ]
}

group("tests") {
  testonly = true
  deps = [
    ":fxfs-trace-tests($host_toolchain)",
    ":fxfs-trace-tests-package",
  ]
}
