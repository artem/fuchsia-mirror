group("tests") {
  testonly = true

  deps = [ "i2c:tests" ]

  if (target_cpu == "x64") {
    deps += [ "intel-i2c:tests" ]
  }

  if (target_cpu == "arm64") {
    deps += [ "aml-i2c:tests" ]
  }
}
