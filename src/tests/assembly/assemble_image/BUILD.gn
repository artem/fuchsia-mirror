import("//build/board.gni")

group("tests") {
  testonly = true
}

if (is_host) {
  group("host_tests") {
    testonly = true

    # The assembly integration tests can only be performed when a board is
    # defined.
    if (has_board) {
      deps = [
        "assemble_image",
        "compiled_package:compiled_package_test",
        "developer_packages",
        "product_drivers",
        "structured_config",
      ]
    }
  }
}
