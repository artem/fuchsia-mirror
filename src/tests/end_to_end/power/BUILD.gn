import("//build/python/python_library.gni")

python_library("power_test_utils") {
  testonly = true
  library_name = "power_test_utils"
  sources = [
    "__init__.py",
    "power_test_utils.py",
  ]
  library_deps = [ "//src/performance/lib/trace_processing" ]
}

source_set("power_utils") {
  testonly = true
  sources = [
    "power_utils.cc",
    "power_utils.h",
  ]
}

group("power") {
  testonly = true
  deps = [
    "//src/tests/end_to_end/squareload",
    "//src/tests/end_to_end/suspend",
  ]
}

group("tests") {
  testonly = true
  deps = [ "tests" ]
}
