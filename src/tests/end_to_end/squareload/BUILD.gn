import("//build/components.gni")
import("//build/test.gni")
import("//build/testing/perf/test.gni")

group("squareload") {
  testonly = true
  public_deps = [
    ":power_squareload_test_fc($host_toolchain)",
    ":squareload_test",
  ]
}

executable("squareload_bin") {
  output_name = "squareload"
  testonly = true
  deps = [
    "//sdk/lib/syslog/cpp",
    "//src/lib/fxl/test:gtest_main",
    "//src/tests/end_to_end/power:power_utils",
    "//third_party/googletest:gtest",
  ]
  sources = [ "main.cc" ]
}

fuchsia_unittest_package("squareload_test") {
  deps = [ ":squareload_bin" ]
}

# This test measures DUT power consumed by the cpu square wave load test.
python_perf_test("power_squareload_test_fc") {
  main_source = "squareload_test.py"
  libraries = [
    "//src/performance/lib/trace_processing",
    "//src/testing/end_to_end/mobly_base_tests:fuchsia_power_base_test",
    "//src/testing/end_to_end/honeydew",
    "//src/tests/end_to_end/power:power_test_utils",
  ]

  expected_metric_names_filepath = "//src/tests/end_to_end/perf/expected_metric_names/fuchsia.power.squareload_cpu.txt"

  params_source = "squareload_test_params.yaml"
  transport = "fuchsia-controller"
}
