import("//build/components.gni")
import("//build/test.gni")

test("idle_test") {
  testonly = true

  sources = [ "idle_test.cc" ]

  deps = [ "//third_party/googletest:gtest" ]
}

test_spec("idle_test_spec") {
  target = get_label_info(":idle_test", "label_with_toolchain")
  path = "host_x64/idle_test"
  environments = [
    {
      dimensions = {
        device_type = "Vim3"
      }
      tags = [ "power-measurement" ]
    },
  ]
  deps = [ ":idle_test" ]
}
