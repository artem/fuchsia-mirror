import("//build/components.gni")
import("//build/test.gni")

test("idle_test") {
  testonly = true

  sources = [ "idle_test.cc" ]

  deps = [ "//third_party/googletest:gtest" ]

  environments = [
    {
      dimensions = {
        device_type = "Vim3"
      }
      tags = [ "power-measurement" ]
    },
  ]
}

group("idle_test_spec") {
  testonly = true
  deps = [ ":idle_test($host_toolchain)" ]
}
