import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

if (is_host) {
  python_mobly_test("bluetooth_avrcp_test_sl4f") {
    main_source = "bluetooth_avrcp_test.py"

    # The library below provides device interaction APIs.
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
      "//src/tests/end_to_end/connectivity/bluetooth:bluetooth_utils",
    ]

    deps = [ "//src/tests/end_to_end/connectivity/bluetooth:bluetooth_utils" ]
    params_source = "params.yaml"
    transport = "sl4f"
    environments = [
      sherlock_env,
      vim3_env,
    ]
  }
}

group("e2e_avrcp_test") {
  testonly = true
  public_deps = [ ":bluetooth_avrcp_test_sl4f($host_toolchain)" ]
}
