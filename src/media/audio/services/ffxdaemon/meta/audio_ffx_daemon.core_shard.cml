{
    children: [
        {
            name: "audio_ffx_daemon",
            url: "fuchsia-pkg://fuchsia.com/audio_ffx_daemon#meta/audio_ffx_daemon.cm",
            environment: "#core-env",
        },
    ],
    offer: [
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: "#audio_ffx_daemon",
        },
        {
            protocol: [
                "fuchsia.media.Audio",
                "fuchsia.ultrasound.Factory",
            ],
            from: "#audio_core",
            to: "#audio_ffx_daemon",
            availability: "optional",
            source_availability: "unknown",
        },
        {
            protocol: [
                "fuchsia.audio.device.ControlCreator",
                "fuchsia.audio.device.Registry",
            ],
            from: "#audio_device_registry",
            to: "#audio_ffx_daemon",
            availability: "optional",
            source_availability: "unknown",
        },
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-audio-input",
            to: "#audio_ffx_daemon",
            subdir: "audio-input",
        },
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-audio-output",
            to: "#audio_ffx_daemon",
            subdir: "audio-output",
        },
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-audio-composite",
            to: "#audio_ffx_daemon",
            subdir: "audio-composite",
        },
    ],
}
