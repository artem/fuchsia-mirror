import("//build/components.gni")

group("util") {
  testonly = true
  deps = [ ":virtual_audio_util" ]
}

executable("bin") {
  output_name = "virtual_audio"

  sources = [
    "//src/media/audio/drivers/virtual_audio/virtual_audio.h",
    "virtual_audio.cc",
  ]

  deps = [
    "//sdk/fidl/fuchsia.virtualaudio:fuchsia.virtualaudio_hlcpp",
    "//sdk/lib/media/cpp:no_converters",
    "//sdk/lib/sys/cpp",
    "//sdk/lib/syslog/cpp",
    "//src/lib/fsl",
    "//src/lib/fxl",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
  ]
}

fuchsia_package("virtual_audio_util") {
  deps = [ ":bin" ]
}
