import("//build/rust/rustc_library.gni")

rustc_library("lib") {
  name = "addr"
  version = "0.1.0"
  edition = "2021"
  with_unit_tests = true
  sources = [
    "src/lib.rs",
    "src/target_addr.rs",
  ]
  deps = [
    "../netext:lib",
    "//sdk/fidl/fuchsia.net:fuchsia.net_rust",
    "//src/developer/ffx/fidl:fuchsia.developer.ffx_rust",
    "//third_party/rust_crates:anyhow",
  ]

  test_deps = []
}

group("tests") {
  testonly = true

  deps = [ ":lib_test" ]
}

group("addr") {
  testonly = true

  deps = [
    ":lib",
    ":tests",
  ]
}
