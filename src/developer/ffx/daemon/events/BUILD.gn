import("//build/rust/rustc_library.gni")

rustc_library("lib") {
  name = "ffx_daemon_events"
  edition = "2021"
  with_unit_tests = true

  deps = [
    "//src/developer/ffx/lib/rcs:lib",
    "//src/developer/ffx/lib/ssh:lib",
    "//src/developer/ffx/lib/target:lib",
  ]

  sources = [ "src/lib.rs" ]
}

group("events") {
  testonly = true
  deps = [ ":lib" ]
}

group("tests") {
  testonly = true
  deps = [ ":lib_test($host_toolchain)" ]
}
