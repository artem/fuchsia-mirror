{
    include: [
        "inspect/offer.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/critical_services_mock_services",
    },
    children: [
        {
            name: "config",
            url: "#meta/critical-services_config.cm",
        },
        {
            name: "critical-services",
            url: "#meta/critical-services.cm",
            startup: "eager",
        },
        {
            name: "test-driver",
            url: "#meta/test-driver.cm",
        },
    ],
    capabilities: [
        {
            directory: "input",
            rights: [ "r*" ],
            path: "/input",
        },
        {
            protocol: [
                "fuchsia.hardware.power.statecontrol.Admin",
                "fuchsia.test.pwrbtn.Tests",
            ],
        },
    ],
    offer: [
        {
            from: "#config",
            to: "#critical-services",
            config: "fuchsia.diagnostics.ExceptionHandlerAvailable",
        },
        {
            directory: "input",
            from: "self",
            to: "#critical-services",
        },
        {
            protocol: "fuchsia.hardware.power.statecontrol.Admin",
            from: "self",
            to: "#critical-services",
        },
        {
            protocol: "fuchsia.test.pwrbtn.Tests",
            from: "self",
            to: "#test-driver",
        },
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [
                "#critical-services",
                "#test-driver",
            ],
        },
        {
            protocol: "fuchsia.boot.WriteOnlyLog",
            from: "parent",
            to: "#critical-services",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.test.Suite",
            from: "#test-driver",
        },
    ],
}
