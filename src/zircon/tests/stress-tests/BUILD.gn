import("//build/components.gni")

fuchsia_test_component("vm-stress-test") {
  manifest = "meta/vm-stress-test.cml"
  deps = [ "//src/zircon/bin/kstress" ]
  test_type = "system"
}

# This test will run for 22 hours on the core.qemu-x64-stress bot.
fuchsia_test_package("kernel-stress-tests") {
  test_components = [ ":vm-stress-test" ]
  test_specs = {
    environments = [
      {
        dimensions = {
          device_type = "QEMU"
        }
        tags = [ "stress-tests" ]
      },
      {
        dimensions = {
          device_type = "Vim3"
        }
        tags = [ "stress-tests" ]
      },
    ]
  }
}

group("tests") {
  testonly = true
  deps = [ ":kernel-stress-tests" ]
}
