// Offer vulkan protocols to all child components.
{
    include: [
        "syslog/client.shard.cml",
        "trace/offer.shard.cml",
    ],
    offer: [
        {
            protocol: [
                "fuchsia.sysmem.Allocator",
                "fuchsia.vulkan.loader.Loader",
            ],
            from: "parent",
            to: [ "all" ],
        },
    ],
}
