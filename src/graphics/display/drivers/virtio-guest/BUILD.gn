declare_args() {
  use_virtio_gpu_v2 = false
}

group("tests") {
  testonly = true
  if (use_virtio_gpu_v2) {
    deps = [ "v2:tests" ]
  } else {
    deps = [ "v1:tests" ]
  }
}

group("virtio_gpu") {
  if (use_virtio_gpu_v2) {
    deps = [ "v2:virtio_gpu" ]
  } else {
    deps = [ "v1:virtio_gpu" ]
  }
}
