  testonly = true
  deps = [
    ":intel-i915-bind_test",
    ":intel-i915-test-package",
  ]
}

fuchsia_unittest_package("intel-i915-test-package") {
  package_name = "intel-i915-test"
  deps = [ ":intel-i915-test" ]
  manifest = "meta/intel-i915-test.cml"
  test_specs = {
    log_settings = {
      max_severity = "ERROR"
    }
  }
}
