group("lib") {
  testonly = true

  deps = [
    "go:far",
    "rust:fuchsia-archive",
  ]
}

group("tests") {
  testonly = true

  deps = [
    "cpp:tests",
    "go:tests",
    "rust:tests",
  ]

  if (current_cpu == "riscv64") {
    deps -= [
      # TODO(fxbug.dev/300170314): Remove after removing Go dependencies on RISC-V.
      "go:tests",
    ]
  }
}
