{
    include: [
        "//sdk/lib/sys/component/realm_builder.shard.cml",
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/timekeeper-test-realm-factory",
    },
    capabilities: [
        {
            protocol: [
                "fuchsia.testing.FakeClock",
                "fuchsia.testing.FakeClockControl",
                "test.time.realm.RealmFactory",
            ],
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.component.Binder",
                "fuchsia.diagnostics.ArchiveAccessor",
                "fuchsia.logger.LogSink",
                "fuchsia.process.Launcher",
            ],
            from: "parent",
            to: "#realm_builder",
        },
        {
            storage: "data",
            from: "parent",
            to: "#realm_builder",
        },
        {
            storage: "cache",
            from: "parent",
            to: "#realm_builder",
        },
        {
            event_stream: [
                "capability_requested",
                "directory_ready",
            ],
            from: "parent",
            to: "#realm_builder",
        },
    ],
    expose: [
        {
            protocol: [
                // The below two protocols are forwarded programmatically to
                // the #realm_builder collection. This is because there is no
                // way to route directly to a collection (as opposed to a
                // statically defined child component).
                "fuchsia.testing.FakeClock",
                "fuchsia.testing.FakeClockControl",
                "test.time.realm.RealmFactory",
            ],
            from: "self",
        },
    ],
}
