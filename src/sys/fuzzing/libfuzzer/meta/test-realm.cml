{
    include: [ "inspect/offer.shard.cml" ],
    children: [
        {
            name: "unittests",
            url: "#meta/unittests.cm",
        },
        {
            name: "relay",
            url: "#meta/test-relay.cm",
        },
    ],
    offer: [
        {
            runner: "gtest_runner",
            from: "parent",
            to: [ "#unittests" ],
        },
        {
            protocol: [
                "fuchsia.logger.LogSink",
                "fuchsia.process.Launcher",
            ],
            from: "parent",
            to: "#unittests",
        },
        {
            protocol: [ "fuchsia.logger.LogSink" ],
            from: "parent",
            to: "#relay",
        },
        {
            protocol: [ "test.fuzzer.Relay" ],
            from: "#relay",
            to: "#unittests",
        },
        {
            storage: "tmp",
            from: "parent",
            to: "#unittests",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.test.Suite",
            from: "#unittests",
        },
    ],
}
