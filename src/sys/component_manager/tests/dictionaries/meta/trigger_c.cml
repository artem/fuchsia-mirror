{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/trigger",
        args: [
            "Triggered",
            "c",
        ],
    },
    capabilities: [
        { dictionary: "dict" },
        { protocol: "fidl.test.components.Trigger" },
    ],
    use: [
        { protocol: "fidl.examples.routing.echo.Echo" },
    ],
    offer: [
        {
            protocol: "fidl.test.components.Trigger",
            from: "self",
            as: "fidl.test.components.Trigger-c",
            to: "self/dict",
        },
    ],
    expose: [
        {
            from: "self",
            dictionary: "dict",
        },
    ],
}
