import("//build/components.gni")
import("//build/test.gni")

test("bin") {
  testonly = true
  output_name = "config_capability_values"
  sources = [ "test.cc" ]
  deps = [
    ":config_lib",
    "//zircon/system/ulib/async-default",
    "//zircon/system/ulib/zxtest",
  ]
}

fuchsia_component_manifest("manifest") {
  testonly = true
  component_name = "config_capability_values"
  manifest = "meta/test.cml"
}

fuchsia_component("config_capability_values") {
  testonly = true
  cm_label = ":manifest"
  deps = [ ":bin" ]
}

fuchsia_structured_config_cpp_elf_lib("config_lib") {
  testonly = true
  namespace = "config"
  cm_label = ":manifest"
}

fuchsia_structured_config_values2("cc_values") {
  testonly = true
  cm_label = ":manifest"
  component_name = "config_capability_values"
  values = {
    my_flag = true
  }
}

fuchsia_component("parent") {
  testonly = true
  manifest = "meta/parent.cml"
}

fuchsia_test_package("tests") {
  package_name = "config_capability_values"
  test_components = [ ":parent" ]
  deps = [
    ":cc_values",
    ":config_capability_values",
  ]
}
