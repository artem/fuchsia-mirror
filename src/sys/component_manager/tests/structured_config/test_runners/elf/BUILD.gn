import("//build/components.gni")
import("//build/test.gni")

test("bin") {
  testonly = true
  output_name = "sc_elf_test_runner"
  sources = [ "test.cc" ]
  deps = [
    ":config_lib",
    "//zircon/system/ulib/zxtest",
  ]
}

fuchsia_component_manifest("manifest") {
  testonly = true
  component_name = "cpp_elf_receiver"
  manifest = "meta/test.cml"
}

fuchsia_structured_config_cpp_elf_lib("config_lib") {
  testonly = true
  namespace = "receiver_config"
  cm_label = ":manifest"
}

fuchsia_component("component") {
  testonly = true
  cm_label = ":manifest"
  deps = [ ":bin" ]
}

fuchsia_structured_config_values("values") {
  testonly = true
  cm_label = ":manifest"
  values_source = "values.json5"
}

fuchsia_test_package("tests") {
  package_name = "sc_cpp_elf_test_runner"
  test_components = [ ":component" ]
  deps = [ ":values" ]
}
