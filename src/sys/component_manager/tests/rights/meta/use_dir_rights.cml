{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/use_dir_rights",
    },
    capabilities: [
        { protocol: "fidl.test.components.Trigger" },
    ],
    use: [
        {
            directory: "read_only",
            rights: [ "r*" ],
            path: "/read_only",
        },
        {
            directory: "read_write",
            rights: [ "rw*" ],
            path: "/read_write",
        },
        {
            directory: "read_write_dup",
            rights: [ "rw*" ],
            path: "/read_write_dup",
        },
        {
            directory: "read_exec",
            rights: [ "rx*" ],
            path: "/read_exec",
        },
        {
            directory: "read_only_after_scoped",
            rights: [ "r*" ],
            path: "/read_only_after_scoped",
        },
    ],
    expose: [
        {
            protocol: "fidl.test.components.Trigger",
            from: "self",
        },
    ],
}
