// Verifies that rights are passed correctly the "as" keyword is used.
{
    include: [ "inspect/offer.shard.cml" ],
    children: [
        {
            name: "use_dir_rights",
            url: "#meta/use_dir_rights.cm",
        },
        {
            name: "expose_dir_rights",
            url: "#meta/expose_dir_rights.cm",
        },
    ],
    offer: [
        {
            directory: "read_only",
            from: "#expose_dir_rights",
            to: "#use_dir_rights",
        },
        {
            directory: "read_write",
            from: "#expose_dir_rights",
            to: "#use_dir_rights",
        },
        {
            directory: "read_write",
            from: "#expose_dir_rights",
            as: "read_write_dup",
            to: "#use_dir_rights",
        },
        {
            directory: "read_exec",
            from: "#expose_dir_rights",
            to: "#use_dir_rights",
        },

        // This permission is scoped from rw to r within an alias.
        {
            directory: "read_write",
            from: "#expose_dir_rights",
            as: "read_only_after_scoped",
            to: "#use_dir_rights",
            rights: [ "r*" ],
        },
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [
                "#expose_dir_rights",
                "#use_dir_rights",
            ],
        },
    ],
    expose: [
        {
            protocol: "fidl.test.components.Trigger",
            from: "#use_dir_rights",
        },
    ],
}
