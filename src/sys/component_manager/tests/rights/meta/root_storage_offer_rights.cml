// Passes a read only storage capability to a child, this is invalid and so should not be mapped
// into the child process as it is expecting read write.
{
    include: [ "inspect/offer.shard.cml" ],
    children: [
        {
            name: "use_storage",
            url: "#meta/use_storage.cm",
        },
        {
            name: "expose_dir_rights",
            url: "#meta/expose_dir_rights.cm",
        },
    ],
    capabilities: [
        {
            storage: "data",
            from: "#expose_dir_rights",
            backing_dir: "read_write",
            storage_id: "static_instance_id_or_moniker",
        },
    ],
    offer: [
        {
            storage: "data",
            from: "self",
            to: "#use_storage",
        },
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [
                "#expose_dir_rights",
                "#use_storage",
            ],
        },
    ],
    expose: [
        {
            protocol: "fidl.test.components.Trigger",
            from: "#use_storage",
        },
    ],
}
