{
    include: [
        "//src/sys/component_manager/tests/meta/elf_runner_and_environment.shard.cml",
        "inspect/offer.shard.cml",
    ],
    children: [
        {
            name: "memfs",
            url: "#meta/memfs.cm",
            startup: "eager",
            environment: "#elf-env",
        },
        {
            name: "storage_user",
            url: "#meta/storage_user.cm",
            startup: "eager",
            environment: "#elf-env",
        },
    ],
    capabilities: [
        {
            storage: "data",
            from: "#memfs",
            backing_dir: "memfs",
            storage_id: "static_instance_id_or_moniker",
        },
    ],
    offer: [
        {
            storage: "data",
            from: "self",
            to: "#storage_user",
        },
        {
            directory: "memfs",
            from: "#memfs",
            to: "#storage_user",
        },
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [
                "#memfs",
                "#storage_user",
            ],
        },
    ],
}
