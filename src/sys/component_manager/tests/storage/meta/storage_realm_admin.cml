{
    include: [
        "//src/sys/component_manager/tests/meta/use_elf_runner.shard.cml",
        "inspect/offer.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        binary: "bin/storage_realm_admin",
    },
    children: [
        {
            name: "memfs",
            url: "#meta/memfs.cm",
            environment: "#elf-env",
        },
        {
            name: "storage_user_with_instance_id",
            url: "#meta/storage_user_with_instance_id.cm",
            startup: "eager",
            environment: "#elf-env",
        },
    ],
    capabilities: [
        {
            storage: "data",
            from: "#memfs",
            backing_dir: "memfs",
            storage_id: "static_instance_id",
        },
    ],
    use: [
        {
            protocol: "fuchsia.sys2.StorageAdmin",
            from: "#data",
        },
        {
            event_stream: "stopped",
            from: "parent",
        },
    ],
    offer: [
        {
            storage: "data",
            from: "self",
            to: "#storage_user_with_instance_id",
        },
        {
            directory: "memfs",
            from: "#memfs",
            to: "#storage_user_with_instance_id",
        },
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [
                "#memfs",
                "#storage_user_with_instance_id",
            ],
        },
    ],
}
