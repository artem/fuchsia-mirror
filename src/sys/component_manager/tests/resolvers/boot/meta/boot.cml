{
    include: [ "inspect/offer.shard.cml" ],
    children: [
        {
            name: "component",
            url: "fuchsia-boot:///#meta/trigger.cm",
            environment: "#env",
        },
    ],
    offer: [
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [ "#component" ],
        },
    ],
    expose: [
        {
            protocol: "fidl.test.components.Trigger",
            from: "#component",
        },
    ],
    environments: [
        {
            name: "env",
            extends: "none",
            runners: [
                {
                    runner: "elf",
                    from: "parent",
                },
            ],
            resolvers: [
                {
                    resolver: "boot_resolver",
                    from: "parent",
                    scheme: "fuchsia-boot",
                },
            ],
            __stop_timeout_ms: 6000,
        },
    ],
}
