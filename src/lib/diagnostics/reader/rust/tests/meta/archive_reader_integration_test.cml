{
    include: [
        "//src/sys/test_runners/rust/default.shard.cml",
        "inspect/offer.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        binary: "bin/archive_reader_integration_test",
    },
    children: [
        {
            name: "archivist",
            url: "fuchsia-pkg://fuchsia.com/archive-reader-integration-tests#meta/archivist-for-embedding.cm",
        },
        {
            name: "driver",
            url: "fuchsia-pkg://fuchsia.com/archive-reader-integration-tests#meta/driver.cm",
        },
    ],
    collections: [
        {
            name: "coll",
            durability: "transient",
        },
    ],
    use: [
        {
            protocol: [ "fuchsia.diagnostics.ArchiveAccessor" ],
            from: "#archivist",
        },
    ],
    offer: [
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [
                "#archivist",
                "#coll",
            ],
        },
        {
            event_stream: "capability_requested",
            from: "parent",
            to: "#archivist",
        },
        {
            event_stream: "stopped",
            from: "parent",
            to: "#archivist",
        },
        {
            directory: "config-data",
            from: "parent",
            as: "config-data",
            to: "#archivist",
            subdir: "archivist",
        },
    ],
}
