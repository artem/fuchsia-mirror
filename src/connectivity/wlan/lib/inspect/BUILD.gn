import("//build/components.gni")
import("//build/rust/rustc_library.gni")

rustc_library("wlan-inspect") {
  name = "wlan_inspect"
  version = "0.1.0"
  with_unit_tests = true
  edition = "2021"

  deps = [
    "//sdk/fidl/fuchsia.wlan.common:fuchsia.wlan.common_rust",
    "//src/connectivity/wlan/lib/common/rust:wlan-common",
    "//src/lib/diagnostics/inspect/contrib/rust",
    "//src/lib/diagnostics/inspect/rust",
    "//third_party/rust_crates:parking_lot",
  ]

  test_deps = [ "//src/lib/diagnostics/testing/diagnostics-assertions/rust:diagnostics-assertions" ]

  sources = [
    "src/iface_mgr.rs",
    "src/lib.rs",
    "src/wrappers.rs",
  ]
}

fuchsia_unittest_package("wlan-inspect-tests") {
  deps = [ ":wlan-inspect_test" ]
}
