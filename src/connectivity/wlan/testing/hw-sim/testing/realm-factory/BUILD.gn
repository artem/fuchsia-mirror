import("//build/components.gni")
import("//build/rust/rustc_binary.gni")

rustc_binary("bin") {
  testonly = true
  edition = "2021"
  name = "realm-factory-main"
  sources = [
    "src/main.rs",
    "src/realm_factory_impl.rs",
    "src/realm_factory_server.rs",
  ]
  deps = [
    "../fidl:test.wlan.realm_rust",
    "//src/lib/fidl_server",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-async",
    "//src/lib/fuchsia-component",
    "//src/lib/fuchsia-component-test",
    "//src/testing/realm_proxy",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:async-trait",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:tracing",
  ]
}

fuchsia_component("realm-factory-component") {
  testonly = true
  component_name = "realm-factory"
  manifest = "meta/default.cml"
  deps = [ ":bin" ]
}

fuchsia_package("realm-factory") {
  package_name = "wlan-hw-sim-realm-factory"
  testonly = true
  deps = [ ":realm-factory-component" ]
}

rustc_test("realm-factory-test") {
  edition = "2021"
  source_root = "src/test.rs"
  sources = [ source_root ]
  name = "realm_factory_test"
  deps = [
    "../fidl:test.wlan.realm_rust",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-component",
    "//src/testing/realm_proxy",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:tracing",
  ]
}

fuchsia_component("test-suite-component") {
  testonly = true
  component_name = "test-suite"
  manifest = "meta/test-suite.cml"
  deps = [ ":realm-factory-test" ]
}

fuchsia_package("test-suite") {
  testonly = true
  deps = [ ":test-suite-component" ]
}
