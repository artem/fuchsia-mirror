{
    include: [
        "//sdk/lib/driver_test_realm/meta/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    children: [
        {
            name: "stash",
            url: "#meta/stash_secure.cm",
        },
        {
            name: "wlancfg",
            url: "#meta/wlancfg.cm",
        },
    ],
    use: [
        { protocol: "fuchsia.diagnostics.ArchiveAccessor" },
    ],
    offer: [
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [
                "#stash",
                "#wlancfg",
            ],
        },
        {
            protocol: "fuchsia.inspect.InspectSink",
            from: "parent",
            to: "#wlancfg",
        },
        {
            protocol: "fuchsia.stash.SecureStore",
            from: "#stash",
            to: "#wlancfg",
        },
        {
            protocol: "fuchsia.location.namedplace.RegulatoryRegionWatcher",
            from: "parent",
            to: "#wlancfg",
        },
        {
            protocol: "fuchsia.wlan.device.service.DeviceMonitor",
            from: "parent",
            to: [ "#wlancfg" ],
            dependency: "weak",
        },
        {
            storage: "data",
            from: "parent",
            to: [
                "#stash",
                "#wlancfg",
            ],
        },
    ],
    expose: [
        {
            protocol: [
                "fuchsia.wlan.policy.AccessPointProvider",
                "fuchsia.wlan.policy.ClientProvider",
            ],
            from: "#wlancfg",
        },
        {
            protocol: "fuchsia.driver.test.Realm",
            from: "#driver_test_realm",
        },
        {
            directory: "dev-topological",
            from: "#driver_test_realm",
            rights: [ "r*" ],
        },
        {
            directory: "dev-class",
            from: "#driver_test_realm",
            rights: [ "r*" ],
        },
    ],
}
