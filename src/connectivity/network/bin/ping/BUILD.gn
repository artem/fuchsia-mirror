import("//build/assembly/bootfs_files_for_assembly.gni")

executable("ping") {
  visibility = [
    ":*",
    "//build/images/zedboot:*",
  ]
  sources = [ "ping.cc" ]
  deps = [
    "//sdk/lib/fdio",
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/pretty",
  ]
}

bootfs_files_for_assembly("bootfs") {
  deps = [ ":ping" ]
}
