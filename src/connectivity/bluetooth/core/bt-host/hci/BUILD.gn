    "fake_bredr_connection.cc",
    "fake_local_address_delegate.cc",
    "fake_low_energy_connection.cc",
    "fake_sco_connection.cc",
  ]

  deps = [ "$dir_pw_async:heap_dispatcher" ]

  public_deps = [ ":hci" ]
