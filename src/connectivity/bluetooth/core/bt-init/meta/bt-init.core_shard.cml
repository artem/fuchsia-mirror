{
    children: [
        {
            name: "bluetooth-core",
            url: "fuchsia-pkg://fuchsia.com/bt-init#meta/bt-init.cm",
            environment: "#core-env",
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.device.NameProvider",
                "fuchsia.logger.LogSink",
            ],
            from: "parent",
            to: [ "#bluetooth-core" ],
        },
        {
            protocol: [ "fuchsia.stash.SecureStore" ],
            from: "#stash_secure",
            to: [ "#bluetooth-core" ],
        },
        {
            protocol: "fuchsia.bluetooth.snoop.Snoop",
            from: "#bt-snoop",
            to: [ "#bluetooth-core" ],
            source_availability: "unknown",
        },

        // TODO(b/42085239): Remove when all bt vendor drivers support FIDL
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-bt-host",
            to: "#bluetooth-core",
            subdir: "bt-host",
        },
        {
            directory: "dev-class",
            from: "parent",
            as: "dev-bt-hci",
            to: "#bluetooth-core",
            subdir: "bt-hci",
        },
        {
            protocol: "fuchsia.metrics.MetricEventLoggerFactory",
            from: "#cobalt",
            to: [ "#bluetooth-core" ],
        },
    ],
}
