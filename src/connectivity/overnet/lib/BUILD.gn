group("lib") {
  testonly = true
  deps = [
    "core",
    "onet_test_util",
    "quic",
    "serial_link",
    "stream_framer",
    "stream_link",
    "udp_link",
  ]
  if (is_host) {
    deps += [
      "ascendd",
      "hoist",
      "onet_tool",
    ]
  }
}

group("tests") {
  testonly = true
  deps = [
    "circuit:tests",
    "core:tests",
    "hoist:tests($host_toolchain)",
    "onet_test_util:tests",
    "quic:tests",
    "serial_link:tests",
    "stream_framer:tests",
    "stream_link:tests",
    "udp_link:tests",
  ]
}
