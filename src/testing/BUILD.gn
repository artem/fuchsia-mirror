group("testing") {
  testonly = true
  deps = [
    ":tests",
    "fuzzing",
    "loadbench",
    "pkgstats",
  ]
}

group("tests") {
  testonly = true

  deps = [
    "catapult_converter:tests",
    "fuzzing:tests",
    "host-target-testing:tests",
    "loadbench:tests",
    "pkgstats:tests",
    "realm_client:tests",
    "sl4f:tests",
  ]
}

group("e2e_tests") {
  testonly = true

  deps = []

  if (!is_asan) {
    # Do not run host-driven tests on Fuchsia's `asan` build variant.
    deps += [
      "end_to_end:core_emulator_stable_packages",
      "end_to_end:core_emulator_stable_tests",
      "end_to_end:core_nuc_stable_packages",
      "end_to_end:core_nuc_stable_tests",
      "end_to_end/mobly_driver/tests/functional_tests:tests",
    ]
  }
}
