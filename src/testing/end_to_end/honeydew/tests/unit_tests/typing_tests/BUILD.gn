import("//build/python/python_host_test.gni")

if (is_host) {
  python_host_test("custom_types_test") {
    main_source = "custom_types_test.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//third_party/parameterized",
    ]
    main_callable = "unittest.main"
    extra_args = [ "-v" ]
  }

  python_host_test("screenshot_image_test") {
    main_source = "screenshot_image_test.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/honeydew/tests/unit_tests/typing_tests/resources",
      "//third_party/parameterized",
      "//third_party/pypng",
    ]
    main_callable = "unittest.main"
    extra_args = [ "-v" ]
  }
}

group("tests") {
  testonly = true
  public_deps = [
    ":custom_types_test($host_toolchain)",
    ":screenshot_image_test($host_toolchain)",
  ]
}
