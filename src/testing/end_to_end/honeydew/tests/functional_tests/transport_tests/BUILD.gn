if (is_host) {
  # Group containing all of the transports functional test cases.
  group("tests") {
    testonly = true
    public_deps = [
      "test_fastboot:tests",
      "test_ffx:tests",
    ]
  }

  # Infra test groups:
  #     Stable
  #         Emulator
  #             That does not require SL4F transport
  #     Unstable
  #         Emulator
  #             That does not require SL4F transport
  group("stable_emulator_tests") {
    testonly = true
    public_deps = [ "test_ffx:stable_emulator_tests" ]
  }

  group("unstable_emulator_tests") {
    testonly = true
    public_deps = [ "test_ffx:unstable_emulator_tests" ]
  }
}
