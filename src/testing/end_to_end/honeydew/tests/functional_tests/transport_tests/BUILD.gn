if (is_host) {
  # Group of test cases that will be run in FYI on emulator.
  group("emulator_tests_fyi") {
    testonly = true
    public_deps = [ "test_ffx:ffx_test($host_toolchain)" ]
  }

  # Group containing all of the HoneyDew transports functional test cases.
  group("tests") {
    testonly = true
    public_deps = [
      "test_fastboot:tests",
      "test_ffx:tests",
    ]
  }

  # Stable infra test groups.
  group("stable_sl4f_emulator_tests") {
    testonly = true
    public_deps = []
  }

  group("stable_non_sl4f_emulator_tests") {
    testonly = true
    public_deps = []
  }

  # Unstable infra test groups.
  group("unstable_sl4f_emulator_tests") {
    testonly = true
    public_deps = []
  }

  group("unstable_non_sl4f_emulator_tests") {
    testonly = true
    public_deps = [
      "test_fastboot:unstable_non_sl4f_emulator_tests",
      "test_ffx:unstable_non_sl4f_emulator_tests",
    ]
  }
}
