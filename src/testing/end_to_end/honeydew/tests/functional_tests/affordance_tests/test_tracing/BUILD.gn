import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

if (is_host) {
  python_mobly_test("tracing_test_sl4f") {
    main_source = "test_tracing.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    transport = "sl4f"
    environments = [ emu_env ]
  }

  python_mobly_test("tracing_test_fc") {
    main_source = "test_tracing.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    transport = "fuchsia-controller"
    environments = [ emu_env ]
  }

  # Group containing all of the Tracing affordance functional test cases.
  group("tests") {
    testonly = true
    public_deps = [
      ":tracing_test_fc($host_toolchain)",
      ":tracing_test_sl4f($host_toolchain)",
    ]
  }
}
