import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

if (is_host) {
  python_mobly_test("tracing_test") {
    main_source = "test_tracing.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    environments = [ emu_env ]
  }

  python_mobly_test("tracing_test_fc") {
    main_source = "test_tracing.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    transport = "fuchsia-controller"
    environments = [ emu_env ]
  }

  # Group containing all of the Tracing affordance functional test cases.
  group("tests") {
    testonly = true
    public_deps = [
      ":tracing_test($host_toolchain)",
      ":tracing_test_fc($host_toolchain)",
    ]
  }

  # Infra test groups:
  #     Stable
  #         Emulator
  #             That require SL4F transport
  #             That does not require SL4F transport

  group("stable_emulator_sl4f_tests") {
    testonly = true
    public_deps = [ ":tracing_test($host_toolchain)" ]
  }

  group("stable_emulator_tests") {
    testonly = true
    public_deps = [ ":tracing_test_fc($host_toolchain)" ]
  }
}
