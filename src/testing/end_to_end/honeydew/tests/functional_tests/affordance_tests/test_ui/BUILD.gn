import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

if (is_host) {
  python_mobly_test("screenshot_test") {
    main_source = "test_screenshot.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    environments = [ emu_env ]
  }

  python_mobly_test("user_input_test") {
    main_source = "test_user_input.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    environments = [ emu_env ]
  }

  # Group containing all of the UI affordance functional test cases.
  group("tests") {
    testonly = true
    public_deps = [
      ":screenshot_test($host_toolchain)",
      ":user_input_test($host_toolchain)",
    ]
  }

  # UI affordance tests are not enabled in infra yet.

  # TODO(b/296269354): Add SL4F based emulator tests after updating builders to
  # target "workbench"
}
