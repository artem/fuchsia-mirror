if (is_host) {
  # Group of test cases that will be run in CQ on emulator.
  # Before adding a test case to this group, it first should be added to
  # `emulator_tests_fyi` group and wait for 200 consecutive successful runs to
  # make sure test case is stable and does not break CQ.
  group("emulator_tests") {
    testonly = true
    public_deps = [ "test_tracing:tracing_test($host_toolchain)" ]
  }

  # Group of test cases that will be run in FYI on emulator.
  group("emulator_tests_fyi") {
    testonly = true
    public_deps = [
      ":emulator_tests",
      "test_tracing:tracing_test_fc($host_toolchain)",
    ]
  }

  # Group of test cases that will be run in FYI on emulator build using terminal.
  group("terminal_emulator_tests_fyi") {
    testonly = true
    public_deps = [
      # TODO(b/294272164): session functional test can only run on terminal
      # product. Use `terminal_emulator_tests_fyi` to avoid it run on CQ.
      "test_session:session_test($host_toolchain)",
      "test_ui:screenshot_test($host_toolchain)",
      "test_ui:user_input_test($host_toolchain)",
    ]
  }

  # Group containing all of the HoneyDew device affordances functional test cases.
  group("tests") {
    testonly = true
    public_deps = [
      "test_bluetooth:tests",
      "test_session:tests",
      "test_tracing:tests",
      "test_ui:tests",
    ]
  }

  # Stable infra test groups.
  group("stable_sl4f_emulator_tests") {
    testonly = true
    public_deps = [
      "test_bluetooth:stable_sl4f_emulator_tests",
      "test_session:stable_sl4f_emulator_tests",
      "test_tracing:stable_sl4f_emulator_tests",
      "test_ui:stable_sl4f_emulator_tests",
    ]
  }

  group("stable_non_sl4f_emulator_tests") {
    testonly = true
    public_deps = [
      "test_bluetooth:stable_non_sl4f_emulator_tests",
      "test_session:stable_non_sl4f_emulator_tests",
      "test_tracing:stable_non_sl4f_emulator_tests",
      "test_ui:stable_non_sl4f_emulator_tests",
    ]
  }

  # Unstable infra test groups.
  group("unstable_sl4f_emulator_tests") {
    testonly = true
    public_deps = [
      "test_bluetooth:unstable_sl4f_emulator_tests",
      "test_session:unstable_sl4f_emulator_tests",
      "test_tracing:unstable_sl4f_emulator_tests",
      "test_ui:unstable_sl4f_emulator_tests",
    ]
  }

  group("unstable_non_sl4f_emulator_tests") {
    testonly = true
    public_deps = [
      "test_bluetooth:unstable_non_sl4f_emulator_tests",
      "test_session:unstable_non_sl4f_emulator_tests",
      "test_tracing:unstable_non_sl4f_emulator_tests",
      "test_ui:unstable_non_sl4f_emulator_tests",
    ]
  }
}
