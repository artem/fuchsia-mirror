if (is_host) {
  # Group containing all of the HoneyDew affordances functional test cases.
  group("tests") {
    testonly = true
    public_deps = [
      "test_bluetooth:tests",
      "test_session:tests",
      "test_tracing:tests",
      "test_ui:tests",
      "test_wlan:tests",
    ]
  }
}

group("packages") {
  testonly = true
  public_deps = [
    "test_session:packages",
    "test_ui:packages",
  ]
}

group("affordance_tests") {
  testonly = true
  public_deps = [
    ":packages",
    ":tests($host_toolchain)",
  ]
}
