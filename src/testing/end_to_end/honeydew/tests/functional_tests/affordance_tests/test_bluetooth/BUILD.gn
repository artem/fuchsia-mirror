import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

if (is_host) {
  python_mobly_test("bluetooth_avrcp_test_sl4f") {
    main_source = "test_bluetooth_avrcp.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    transport = "fuchsia-controller-preferred"
    environments = [ sherlock_env ]
  }

  python_mobly_test("bluetooth_gap_test_sl4f") {
    main_source = "test_bluetooth_gap.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    transport = "fuchsia-controller-preferred"
    environments = [ sherlock_env ]
  }

  # Group containing all of the bluetooth affordance functional test cases.
  group("tests") {
    testonly = true
    public_deps = [
      ":bluetooth_avrcp_test_sl4f($host_toolchain)",
      ":bluetooth_gap_test_sl4f($host_toolchain)",
    ]
  }
}
