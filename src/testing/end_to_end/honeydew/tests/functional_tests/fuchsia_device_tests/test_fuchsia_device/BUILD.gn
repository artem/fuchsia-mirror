import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

if (is_host) {
  python_mobly_test("x64_emu_test_fc") {
    main_source = "test_fuchsia_device.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    params_source = "params_x64.yaml"
    transport = "fuchsia-controller"

    # Only enable for AEMU-x64 as host-tests aren't supported on QEMU-arm64.
    environments = [ aemu_env ]
  }

  # For local runs to test "fuchsia-controller-preferred" class
  python_mobly_test("x64_emu_test_fc_preferred") {
    main_source = "test_fuchsia_device.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    params_source = "params_x64.yaml"
    transport = "fuchsia-controller-preferred"
  }

  python_mobly_test("x64_nuc_test_fc") {
    main_source = "test_fuchsia_device.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    params_source = "params_x64.yaml"
    transport = "fuchsia-controller"
    environments = [ nuc11_env ]
  }

  # For local runs to test "fuchsia-controller-preferred" class
  python_mobly_test("x64_nuc_test_fc_preferred") {
    main_source = "test_fuchsia_device.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    params_source = "params_x64.yaml"
    transport = "fuchsia-controller-preferred"
  }

  python_mobly_test("vim3_test_fc") {
    main_source = "test_fuchsia_device.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    params_source = "params_vim3.yaml"
    transport = "fuchsia-controller"
    environments = [ vim3_env ]
  }

  # For local runs to test "fuchsia-controller-preferred" class
  python_mobly_test("vim3_test_fc_preferred") {
    main_source = "test_fuchsia_device.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    params_source = "params_vim3.yaml"
    transport = "fuchsia-controller-preferred"
  }

  # Group containing all of the fuchsia_device functional test cases.
  group("tests") {
    testonly = true
    public_deps = [
      ":vim3_test_fc($host_toolchain)",
      ":vim3_test_fc_preferred($host_toolchain)",
      ":x64_emu_test_fc($host_toolchain)",
      ":x64_emu_test_fc_preferred($host_toolchain)",
      ":x64_nuc_test_fc($host_toolchain)",
      ":x64_nuc_test_fc_preferred($host_toolchain)",
    ]
  }
}
