import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

if (is_host) {
  python_mobly_test("generic_fuchsia_device_test") {
    main_source = "test_generic_fuchsia_device.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/honeydew/tests/functional_tests/device_class_tests/test_fuchsia_device:test_fuchsia_device_lib",
    ]
    params_source = "params.yaml"
    environments = [ emu_env ]
  }

  python_mobly_test("generic_fuchsia_device_test_fc") {
    main_source = "test_generic_fuchsia_device.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/honeydew/tests/functional_tests/device_class_tests/test_fuchsia_device:test_fuchsia_device_lib",
    ]
    params_source = "params.yaml"
    transport = "fuchsia-controller"
    environments = [ emu_env ]
  }

  group("tests") {
    testonly = true
    public_deps = [
      ":generic_fuchsia_device_test($host_toolchain)",
      ":generic_fuchsia_device_test_fc($host_toolchain)",
    ]
  }

  # Stable infra test groups.
  group("stable_sl4f_emulator_tests") {
    testonly = true
    public_deps = [ ":generic_fuchsia_device_test($host_toolchain)" ]
  }

  group("stable_non_sl4f_emulator_tests") {
    testonly = true
    public_deps = [ ":generic_fuchsia_device_test_fc($host_toolchain)" ]
  }

  # Unstable infra test groups.
  group("unstable_sl4f_emulator_tests") {
    testonly = true
    public_deps = []
  }

  group("unstable_non_sl4f_emulator_tests") {
    testonly = true
    public_deps = []
  }
}
