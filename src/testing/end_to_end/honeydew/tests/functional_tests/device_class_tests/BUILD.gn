if (is_host) {
  # Group of test cases that will be run in CQ on emulator.
  # Before adding a test case to this group, it first should be added to
  # `emulator_tests_fyi` group and wait for 200 consecutive successful runs to
  # make sure test case is stable and does not break CQ.
  group("emulator_tests") {
    testonly = true
    public_deps = [
      "test_generic_fuchsia_device:generic_fuchsia_device_test($host_toolchain)",
      "test_generic_fuchsia_device:generic_fuchsia_device_test_fc($host_toolchain)",
    ]
  }

  # Group of test cases that will be run in FYI on emulator.
  group("emulator_tests_fyi") {
    testonly = true
    public_deps = [ ":emulator_tests" ]
  }

  # Group of test cases that will be run in FYI on NUC.
  group("nuc_tests_fyi") {
    testonly = true
    public_deps = [
      "test_x64:x64_test($host_toolchain)",
      "test_x64:x64_test_fc($host_toolchain)",
    ]
  }

  # Group of test cases that will be run in FYI on VIM3.
  group("vim3_tests_fyi") {
    testonly = true
    public_deps = [
      "test_vim3:vim3_test($host_toolchain)",
      "test_vim3:vim3_test_fc($host_toolchain)",
    ]
  }

  # Group containing all of the HoneyDew device classes functional test cases.
  group("tests") {
    testonly = true
    public_deps = [
      ":emulator_tests_fyi",
      ":nuc_tests_fyi",
      ":vim3_tests_fyi",
    ]
  }
}
