if (is_host) {
  # Group of test cases that will be run in CQ on emulator.
  # Before adding a test case to this group, it first should be added to
  # `emulator_tests_fyi` group and wait for 200 consecutive successful runs to
  # make sure test case is stable and does not break CQ.
  group("emulator_tests") {
    testonly = true
    public_deps = [
      "affordance_tests:emulator_tests",
      "device_class_tests:emulator_tests",
    ]
  }

  # Group of test cases that will be run in FYI on emulator.
  group("emulator_tests_fyi") {
    testonly = true
    public_deps = [
      "affordance_tests:emulator_tests_fyi",
      "device_class_tests:emulator_tests_fyi",
      "transport_tests:emulator_tests_fyi",
    ]
  }

  # Group of test cases that will be run in FYI on NUC.
  group("nuc_tests_fyi") {
    testonly = true
    public_deps = [ "device_class_tests:nuc_tests_fyi" ]
  }

  # Group of test cases that will be run in FYI on VIM3.
  group("vim3_tests_fyi") {
    testonly = true
    public_deps = [ "device_class_tests:vim3_tests_fyi" ]
  }

  # Group containing all of the HoneyDew functional test cases.
  group("tests") {
    testonly = true
    public_deps = [
      "affordance_tests:tests",
      "device_class_tests:tests",
      "transport_tests:tests",
    ]
  }

  # Stable infra test groups.
  group("stable_sl4f_emulator_tests") {
    testonly = true
    public_deps = [
      "affordance_tests:stable_sl4f_emulator_tests",
      "device_class_tests:stable_sl4f_emulator_tests",
      "transport_tests:stable_sl4f_emulator_tests",
    ]
  }

  group("stable_non_sl4f_emulator_tests") {
    testonly = true
    public_deps = [
      "affordance_tests:stable_non_sl4f_emulator_tests",
      "device_class_tests:stable_non_sl4f_emulator_tests",
      "transport_tests:stable_non_sl4f_emulator_tests",
    ]
  }

  group("stable_sl4f_vim3_tests") {
    testonly = true
    public_deps = [ "device_class_tests:stable_sl4f_vim3_tests" ]
  }

  group("stable_non_sl4f_vim3_tests") {
    testonly = true
    public_deps = [ "device_class_tests:stable_non_sl4f_vim3_tests" ]
  }

  group("stable_sl4f_nuc_tests") {
    testonly = true
    public_deps = [ "device_class_tests:stable_sl4f_nuc_tests" ]
  }

  group("stable_non_sl4f_nuc_tests") {
    testonly = true
    public_deps = [ "device_class_tests:stable_non_sl4f_nuc_tests" ]
  }

  # Unstable infra test groups.
  group("unstable_sl4f_emulator_tests") {
    testonly = true
    public_deps = [
      "affordance_tests:unstable_sl4f_emulator_tests",
      "device_class_tests:unstable_sl4f_emulator_tests",
      "transport_tests:unstable_sl4f_emulator_tests",
    ]
  }

  group("unstable_non_sl4f_emulator_tests") {
    testonly = true
    public_deps = [
      "affordance_tests:unstable_non_sl4f_emulator_tests",
      "device_class_tests:unstable_non_sl4f_emulator_tests",
      "transport_tests:unstable_non_sl4f_emulator_tests",
    ]
  }

  group("unstable_sl4f_vim3_tests") {
    testonly = true
    public_deps = [ "device_class_tests:unstable_sl4f_vim3_tests" ]
  }

  group("unstable_non_sl4f_vim3_tests") {
