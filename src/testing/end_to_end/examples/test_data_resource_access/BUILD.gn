import("//build/python/python_library.gni")
import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

assert(is_host, "Python E2E tests are host-only")

python_mobly_test("data_resource_access_test_fc") {
  main_source = "test_data_resource_access.py"
  libraries = [
    "//src/testing/end_to_end/honeydew",
    "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ":my_resources",
  ]
  transport = "fuchsia-controller"
  environments = [ emu_env ]
}

python_library("my_resources") {
  enable_mypy = true
  testonly = true
  source_root = "my_resources"
  sources = [
    "__init__.py",
    "test_data.json",
  ]
}

group("tests") {
  testonly = true
  public_deps = [ ":data_resource_access_test_fc($host_toolchain)" ]
}
