group("tests") {
  testonly = true
  public_deps = [
    ":run_wo_test_case_revive_fc($host_toolchain)",
    ":test_case_revive_with_hard_reboot_fc($host_toolchain)",
    ":test_case_revive_with_idle_suspend_auto_resume_fc($host_toolchain)",
