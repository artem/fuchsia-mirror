import("//build/assembly/board_configuration.gni")

board_configuration("qemu-riscv64") {
  provided_features = [
    "fuchsia::driver_framework_v2_support",
    "fuchsia::network_require_netstack3",
  ]

  input_bundles = [ "//boards/riscv64:main_bundle" ]

  filesystems = {
    fvm = {
      slice_size = 8388608
      blobfs = {
        size_checker_maximum_bytes = 5216665600
      }
      sparse_output = {
      }
    }
  }
}
