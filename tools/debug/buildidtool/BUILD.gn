import("//build/go/go_binary.gni")
import("//build/go/go_library.gni")

go_library("main") {
  source_dir = "cmd"
  sources = [ "main.go" ]
  deps = [
    "//tools/debug/elflib",
    "//tools/lib/color",
    "//tools/lib/logger",
  ]
}

go_binary("buildidtool") {
  library = ":main"
}

group("tests") {
  testonly = true
}
