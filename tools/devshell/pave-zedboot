#### CATEGORY=Software delivery
### run bootserver for paving zedboot

## usage: fx pave-zedboot [extra bootserver arguments]

set -e

source "$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"/lib/vars.sh || exit $?
fx-config-read

fx-warn "DEPRECATION WARNING"
fx-warn "\`fx pave-zedboot\` is deprecated and will be removed soon, if you need this command, please report to https://fxbug.dev/42081362.\n"

name_args=()
name="$(get-device-name)"
if [[ -n "$name" ]]; then
  name_args+=("-n" "${name}")
fi

exec "${FUCHSIA_BUILD_DIR}/pave-zedboot.sh" "${name_args[@]}" "$@"
