import("//build/rust/rustc_macro.gni")

rustc_macro("macro") {
  edition = "2021"
  name = "reference_doc_macro"
  source_root = "src/lib.rs"

  deps = [
    "//third_party/rust_crates:darling",
    "//third_party/rust_crates:proc-macro2",
    "//third_party/rust_crates:quote",

    # FIXME(https://fxbug.dev/332277415): Please update to syn 2.x.
    # "//third_party/rust_crates:syn",
    "//third_party/rust_crates:syn-v1_0_98",
  ]

  sources = [
    "src/derive_reference_doc.rs",
    "src/lib.rs",
  ]
}

group("tests") {
  testonly = true
  deps = [ "derive-reference-doc-tests" ]
}
